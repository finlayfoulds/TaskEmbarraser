<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="../static/styles.css">
  <title>TaskEmbarraser | My Recipe</title>
</head>
<%- include("header.ejs") -%>
<body>
  <h1 id="welcome" class="view-recipe-name"><%= recipeName %></h1>
  <div id="form">
    <h1>Ingredients</h1>
    <hr>
    <div class="list-group list-group-flush">
      <% for (const ingredient of ingredients) { %>
        <div class="list-group-item view-ingredient"><%= ingredient %></div>
      <% } %>
    </div>
    <h1>Instructions</h1>
    <hr>
    <ol>
      <% for (const step of steps) { %>
      <li class="view-step"><%= step %></li>
      <% } %>
    </ol>
    <div class="buttons-grid">
      <button class="button" onclick="editRecipe('<%= recipeName %>')">Edit</button>
      <button class="button" id="delete-button" onclick="deleteRecipe('<%= recipeName %>')">Delete</button>
    </div>
  </div>
</body>
<script src="../static/index.js" charset="UTF-8"></script>
</html>